{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Frontend",
            "command": "npm start",
            "cwd": "${workspaceFolder}/frontend",
            "request": "launch",
            "type": "node-terminal"
        },
        {
            "name": "Debug Backend",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "backend/app.py",
                "FLASK_DEBUG": "1"
            },
            "args": [
                "run",
                "--no-debugger",
                "--no-reload"
            ],
            "jinja": true,
            "justMyCode": true
        },
        {
            "type": "msedge",
            "name": "Launch Microsoft Edge",
            "request": "launch",
            "runtimeArgs": [
                "--remote-debugging-port=9222"
            ],
            "url": "http://localhost:3001",
            "presentation": {
                "hidden": true
            }
        },
        {
            "type": "vscode-edge-devtools.debug",
            "name": "Open Edge DevTools",
            "request": "attach",
            "url": "http://localhost:3001",
            "presentation": {
                "hidden": true
            }
        }
    ],
    "compounds": [
        {
            "name": "âœ… Debug Dashboard with Edge",
            "configurations": [
                "Debug Frontend",
                "Debug Backend",
                "Launch Microsoft Edge",
                "Open Edge DevTools"
            ],
            "presentation": {
                "hidden": false,
                "group": "",
                "order": 1
            }
        },
        {
            "name": "Debug Dashboard",
            "configurations": [
                "Debug Frontend",
                "Debug Backend"
            ],
            "presentation": {
                "hidden": false,
                "group": "",
                "order": 2
            }
        }
    ]
}